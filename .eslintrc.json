{
    "root": true,
    "env": {
        "node": true,
        "jest": true
    },
    "extends": [
        "plugin:vue/essential",
        "@vue/airbnb"
    ],
    "rules": {
        "no-console": "warn",
        "no-debugger": "warn",
        "max-len": ["warn", { "code": 120} ],
        "indent": ["warn", 4],
        "object-shorthand": "off"
    },
    "parserOptions": {
        "parser": "babel-eslint"
    }
}
